.proposal-accordian
  .lmo-wrap{ng-repeat: "proposal in model.closedProposals() | orderBy:'-closedOrClosingAt' track by proposal.id", id: "proposal-{{proposal.id}}"}
    .active-proposal{ng-if: "selectedProposalId == proposal.id"}
      %proposal_expanded{proposal: "proposal", can_collapse: "true"}

    .inactive-proposal{ng-if: "selectedProposalId != proposal.id", ng-click: "selectProposal(proposal)"}
      %proposal_collapsed{proposal: "proposal"}

  %loading{ng-if: "loadMoreExecuting"}
  .lmo-show-more{ng-if: "hasMoreProposals"}
    %button.proposal-accordian__show-more{ng-hide: "loadMoreExecuting", ng-click: "loadMore()", translate: "common.action.show_more"}
